{
  "name": "@keywaysh/mcp",
  "version": "1.0.0",
  "description": "MCP server for Keyway secrets management",
  "type": "module",
  "bin": {
    "keyway-mcp": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "lint": "eslint src __tests__",
    "lint:fix": "eslint src __tests__ --fix",
    "format": "prettier --write 'src/**/*.ts' '__tests__/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' '__tests__/**/*.ts'",
    "validate": "pnpm run type-check && pnpm run lint && pnpm run test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "conf": "^13.0.1",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "tsup": "^8.5.0",
    "tsx": "^4.20.0",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.51.0",
    "vitest": "^3.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "overrides": {
      "qs": ">=6.14.1"
    }
  },
  "keywords": [
    "mcp",
    "secrets",
    "keyway",
    "claude",
    "llm"
  ],
  "license": "MIT"
}
